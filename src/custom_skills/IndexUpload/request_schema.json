{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "values": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "recordId": {"type": "string"},
                    "identifiers": {"type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "data": {
                        "type": "array",
                        "minItems": 1,
                        "items":{
                            "type": "object",
                            "properties":{
                                "id": {"type": "string"},
                                "filename": {"type": "string"},
                                "content":{ "type": "string"},
                                "contentVector": {"type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "number"
                                    }
                                }
                            },
                        "required": ["id", "filename", "content", "contentVector"]
                        }
                    }
                },
                "required": ["recordId", "identifiers", "data"]
            }
        }
    },
    "required": ["values"]
}
