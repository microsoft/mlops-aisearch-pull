{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "values": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "recordId": {"type": "string"},
                    "data": {
                        "type": "object",
                        "properties": {
                            "text": {"type": "string", "minLength": 1},
                            "document_id": {"type": "string", "minLength": 1},
                            "filename": {"type": "string", "minLength": 0}
                        },
                        "required": [
                            "filename"
                        ]
                    }
                },
                "required": ["recordId", "data"]
            }
        }
    },
    "required": ["values"]
}
