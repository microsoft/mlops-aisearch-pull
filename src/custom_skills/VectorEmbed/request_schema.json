{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "values": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "recordId": {"type": "string"},
                    "filename": {"type": "string"},
                    "data": {
                        "type": "array",
                        "minItems": 1,
                        "items":{
                            "type": "object",
                            "properties":{
                                "page_content": {"type": "string", "minLength": 1},
                                "metadata": {
                                    "type": "object",
                                    "properties": {
                                        "source": {"type": "string", "minLength": 1}
                                    }
                                }
                            },
                        "required": ["page_content"]
                        }
                    }
                },
                "required": ["recordId", "filename", "data"]
            }
        }
    },
    "required": ["values"]
}
