            "inputs": []
          },
          {
            "name": "vector",
            "source": "/document/chunks/*/embedding",
            "sourceContext": null,
            "inputs": []
          },
          {
            "name": "filename",
            "source": "/document/metadata_storage_name",
            "sourceContext": null,
            "inputs": []
          }
        ]
      }
    ],
    "parameters": {
      "projectionMode": "skipIndexingParentDocuments"
    }
  },
